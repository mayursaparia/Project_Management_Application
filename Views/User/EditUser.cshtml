@model ProjectManagementApp.Models.User

@{
    ViewBag.Title = "Edit User";
}



<style>
    

    /* allignment center*/

    .lab {
        padding: 8px 10px 10px 160px;
        color: blue;
    }

    .txt {
        padding: 0px 0px 8px 160px;
    }

    .out {
        background-color: lightgrey;
        margin-top: 50px;
    }
   
   
</style>


<body>

    <div class="out">



        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div>

            <h2 style="color:blue; padding:5px 0 0 500px;">Edit User</h2>


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="lab" style="padding-top:30px;">
                @Html.LabelFor(model => model.firstName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="txt">
                    @Html.EditorFor(model => model.firstName, new { htmlAttributes = new { @class = "form-control", @style = "width:50% !important ; min-width:580px;" } })
                    @Html.ValidationMessageFor(model => model.firstName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="lab">
                @Html.LabelFor(model => model.lastName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="txt">
                    @Html.EditorFor(model => model.lastName, new { htmlAttributes = new { @class = "form-control", @style = "width:50% !important ; min-width:580px;" } })
                    @Html.ValidationMessageFor(model => model.lastName, "", new { @class = "text-danger" })
                </div>
            </div>

            @*<div class="lab">
                @Html.LabelFor(model => model.employeeId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="txt">
                    @Html.EditorFor(model => model.employeeId, new { htmlAttributes = new { @class = "form-control", @style = "width:50% !important ; min-width:580px;" } })
                    @Html.ValidationMessageFor(model => model.employeeId, "", new { @class = "text-danger" })
                </div>
            </div>*@

            <div class="lab">
                <div class="txt">
                    <input type="submit" value="Edit User" class="btn btn-default redcolor" />
                </div>
            </div>
        </div>
        }



    </div>

</body>

<style>

    body {
        background-color: #C8C8C8;
    }

    /*red button*/

    .redcolor, .redcolor:hover, .redcolor:active, .redcolor:visited, .redcolor:focus {
        color: black;
        background-color: red;
        font-weight: bold;
        border: 1px solid black;
    }
</style>
